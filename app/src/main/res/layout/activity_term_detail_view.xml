<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screensandviewscontrollers.TermDetailView"
    android:background="#4CAF50"
    >

    <TextView
        android:id="@+id/termDetailTxtStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/termDetailTxtTermTitle"
        android:layout_toRightOf="@+id/termDetailTxtTermTitle"
        android:text="2020-06-01"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/termDetailLblStartDate"
        app:layout_constraintTop_toBottomOf="@+id/termDetailLblStartDate"
        tools:text="2020-06-01" />

    <TextView
        android:id="@+id/termDetailLblEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:layout_toEndOf="@+id/termDetailTxtStartDate"
        android:layout_toRightOf="@+id/termDetailTxtStartDate"
        android:text="End Date"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/termDetailLblStartDate"
        tools:text="End Date" />

    <TextView
        android:id="@+id/termDetailTxtTermTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="16dp"
        android:text="Spring 2021"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Spring 2021" />

    <TextView
        android:id="@+id/termDetailTxtEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/termDetailTxtStartDate"
        android:layout_toRightOf="@+id/termDetailTxtStartDate"
        android:text="2020-06-01"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/termDetailLblEndDate"
        app:layout_constraintTop_toBottomOf="@+id/termDetailLblEndDate"
        tools:text="2020-06-01" />

    <TextView
        android:id="@+id/termDetailLblStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/termDetailTxtTermTitle"
        android:layout_toRightOf="@+id/termDetailTxtTermTitle"
        android:text="Start Date"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/termDetailTxtTermTitle"
        app:layout_constraintTop_toBottomOf="@+id/termDetailTxtTermTitle"
        tools:text="Start Date" />

    <Button
        android:id="@+id/termDetailBtnCourses"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="Courses"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/termDetailTxtEndDate" />

    <Button
        android:id="@+id/termDetailBtnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Delete Term"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/termDetailBtnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Edit Term"
        app:layout_constraintBottom_toTopOf="@+id/termDetailBtnDelete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>